{
  "name": "smartpad",
  "version": "1.0.0",
  "description": "Modern Online Notepad Application",
  "main": "index.html",
  "homepage": "https://mastan2045.github.io/smartpad",
  "scripts": {
    "start": "browser-sync start --server --files '*.html, *.css, *.js' --port 3000",
    "dev": "browser-sync start --server --files '*.html, *.css, *.js' --port 3000",
    "clean": "if exist build rd /s /q build",
    "prebuild": "npm run clean && mkdir build",
    "build": "npm install && xcopy /E /I /Y *.html build\\ && xcopy /E /I /Y *.css build\\ && xcopy /E /I /Y *.js build\\ && xcopy /E /I /Y favicon.svg build\\"
  },
  "keywords": [
    "notepad",
    "text-editor",
    "online-editor"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^2.29.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 